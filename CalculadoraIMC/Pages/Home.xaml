<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalculadoraIMC.Pages.Home"
             Title="Home">

    
    <ContentPage.Content>
        <StackLayout Padding="20" VerticalOptions="Center">


            <Entry Placeholder="Seu Peso"
                   Keyboard="Numeric"
                   x:Name="pesoEntry"
                   VerticalOptions="Center"
                   Margin="0,0,0,10"/>

            <Entry Placeholder="Sua Altura"
                   Keyboard="Numeric"
                   x:Name="alturaEntry"
                   VerticalOptions="Center"
                   Margin="0,0,0,20"/>

            <!-- BotÃ£o de Calculo -->
            <Button Text="Calcular"
                    VerticalOptions="End"
                    Clicked="OnClicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
